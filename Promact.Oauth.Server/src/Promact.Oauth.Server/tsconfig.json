{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "node",
      "jasmine"
    ]
  },  
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts",
    "typings",
    "wwwroot/app/main-aot.ts"
  ],
  "include": [
    "wwwroot/app/main.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "wwwroot/app/aot",
    "skipMetadataEmit": true
  }
}
