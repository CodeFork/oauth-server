{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },

  "files": [
    "wwwroot/app/app.module.ts",
    "wwwroot/app/main.ts"
  ],

  "angularCompilerOptions": {
    "genDir": "wwwroot/app/AOT",
    "skipMetadataEmit": true
  }
}
